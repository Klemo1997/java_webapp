<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>FileUploadHandler</servlet-name>
        <servlet-class>main.FileUploadHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadHandler</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FileDownloadServlet</servlet-name>
        <servlet-class>main.FileDownloadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileDownloadServlet</servlet-name>
        <url-pattern>/download/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <jsp-file>/files.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/files.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>KeyManager</servlet-name>
        <jsp-file>/key_manager.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>KeyManager</servlet-name>
        <url-pattern>/key_manager.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>KeyGenerator</servlet-name>
        <servlet-class>main.KeysRegenerateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>KeyGenerator</servlet-name>
        <url-pattern>/keys_regenerate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServ</servlet-name>
        <servlet-class>main.LoginServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServ</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServ</servlet-name>
        <servlet-class>main.LogoutServ</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServ</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegServ</servlet-name>
        <servlet-class>main.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegServ</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CommentsHandler</servlet-name>
        <servlet-class>main.CommentsServ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentsHandler</servlet-name>
        <url-pattern>/comments/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PermissionsHandler</servlet-name>
        <servlet-class>main.PermissionServ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PermissionsHandler</servlet-name>
        <url-pattern>/permission/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FileDeleteHandler</servlet-name>
        <servlet-class>main.FileDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDeleteHandler</servlet-name>
        <url-pattern>/delete/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CSRFFilter</filter-name>
        <filter-class>com.github.adriancitu.csrf.GenericCSRFStatelessFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CSRFFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>HeaderManageFilter</filter-name>
        <filter-class>main.HeaderManageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>HeaderManageFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/error404.html</location>
    </error-page>
</web-app>
